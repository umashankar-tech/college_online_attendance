<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="14dp"
    android:backgroundTint="#64D5E8"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/att_attendance_name_gradient"
            android:layout_height="match_parent">
                <TextView
                    android:id="@+id/sturegno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="20dp"
                    android:text="TextView"
                    android:textColor="#090909"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/newcheckBox"
                    android:layout_marginTop="15dp"
                    android:button="@drawable/checkbox_size"
                    android:checked="false"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layoutDirection="rtl"
                    android:text="shankar"
                    android:textColor="#0E0E0E"
                    android:textSize="20dp"
                    android:textStyle="bold"></CheckBox>

        </RelativeLayout>


</LinearLayout>
