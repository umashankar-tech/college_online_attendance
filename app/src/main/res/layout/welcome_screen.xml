<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#F0F2F3"
    android:orientation="vertical"
    tools:context=".WelcomeScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/layoutgradient_color"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1"
            android:layout_width="125dp"
            android:layout_height="122dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/welcome_screen_gradient"
            android:onClick="goAdminLogin"
            android:text=" Admin \nLogin"
            android:textColor="#252524"
            android:textSize="17dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="125dp"
            android:layout_height="122dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"

            android:background="@drawable/welcome_screen_gradient"
            android:onClick="gotoTeacherLogin"
            android:text=" Teacher\n Login"
            android:textColor="#171616"
            android:textSize="16dp"

            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"

            android:background="@drawable/welcome_screen_gradient"
            android:onClick="gotoStudentLogin"
            android:text=" Student\n Login"
            android:textColor="#20201F"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>